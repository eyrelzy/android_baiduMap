<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:collapseColumns="4" >

        <TableRow
            android:id="@+id/tableRow_et"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <EditText
                android:id="@+id/et"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="text"
                 android:layout_weight="1"
                android:focusable="false"
                android:gravity="right"
                android:singleLine="true" >

            </EditText>
        </TableRow>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <TableRow
                android:id="@+id/tableRow_process"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <EditText
                    android:id="@+id/pro"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:gravity="right"
                    android:inputType="none" >

                    <requestFocus />
                </EditText>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow_func"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <Button
                    android:id="@+id/bt_clear"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:background="#9de4f3"
                    android:text="clear" />

                <Button
                    android:id="@+id/bt_back"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#f2f8b0"
                    android:text="back" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <Button
                    android:id="@+id/bt_7"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="7" />

                <Button
                    android:id="@+id/bt_8"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="8" />

                <Button
                    android:id="@+id/bt_9"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="9" />

                <Button
                    android:id="@+id/bt_add"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="+" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <Button
                    android:id="@+id/bt_4"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="4" />

                <Button
                    android:id="@+id/bt_5"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="5" />

                <Button
                    android:id="@+id/bt_6"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="6" />

                <Button
                    android:id="@+id/bt_sub"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="-" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <Button
                    android:id="@+id/bt_1"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="1" />

                <Button
                    android:id="@+id/bt_2"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="2" />

                <Button
                    android:id="@+id/bt_3"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="3" />

                <Button
                    android:id="@+id/bt_multiply"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="*" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <Button
                    android:id="@+id/bt_point"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="." />

                <Button
                    android:id="@+id/bt_0"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="0" />

                <Button
                    android:id="@+id/bt_equal"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="=" />

                <Button
                    android:id="@+id/bt_divide"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="/" />
            </TableRow>

            

        </LinearLayout>

      
    </TableLayout>

</LinearLayout>
